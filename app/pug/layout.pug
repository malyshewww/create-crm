include variables.pug

doctype html
html(lang="ru")
	block variables
	include mixins/button.pug
	include mixins/field.pug
	include mixins/modals.pug
	head 
		block head
			meta(charset="UTF-8")
			meta(http-equiv="X-UA-Compatible", content="IE=edge")
			title #{pageTitle} | site name
			meta(name='viewport', content='width=device-width, initial-scale=1')
			meta(name="format-detection", content="telephone=no")
			//- meta(name='viewport', content='width=1320px, initial-scale=1')
			block links
				link(href="styles/main.min.css" rel="stylesheet")
			//- include blocks/favicons
	body
		div.wrapper#wrapper
			include components/Header/header
			main.main
				block content
			include components/Footer/footer
			include components/Modals/modals
		block scripts
			script(src="scripts/main.min.js" defer)
